<Window x:Class="WPFTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestApp"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:WPFTestApp.ViewModels"
        Title="TestWPFApp" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox 
            Height="20" Width="55" 
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Margin="20" Text="{Binding ConnectIP, Mode=OneWay}"/>
        <Label Name="StatusLabel" Height="20" Width="220" 
               VerticalAlignment="Top" HorizontalAlignment="Center" 
               Margin="95,20,477,0" Content="{Binding ConnectStatus, StringFormat=Статус: {0}}"/>
    </Grid>
</Window>
